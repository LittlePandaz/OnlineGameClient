<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineGame.Pages.Register">
    <ContentPage.Content>
        <StackLayout Padding="16" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="200">
            <Entry Placeholder="Nickname" Text="{Binding Nickname}"/>
            <Entry Placeholder="Email" Keyboard="Email" Text="{Binding Email}"/>
            <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}"/>
            <Entry Placeholder="Confirm password" IsPassword="True" Text="{Binding ConfirmPassword}"/>
            <Button Text="Register" Command="{Binding RegisterCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>